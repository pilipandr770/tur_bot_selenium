# URL подключения к базе данных (PostgreSQL, SQLite или другой)
DATABASE_URL=sqlite:///instance/test.db

# Ключ API OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# ID ассистента для переписывания текстов (Threads API)
OPENAI_ASSISTANT_ID=your_assistant_id_here

# Модель для генерации изображений
DALLE_MODEL=dall-e-3
DALLE_SIZE=1024x1024
DALLE_QUALITY=standard

# Токен Telegram-бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Идентификатор чата или канала для публикации
TELEGRAM_CHAT_ID=@your_telegram_channel_name

# Настройки планировщика
SCRAPE_INTERVAL_MINUTES=60
PUBLISH_INTERVAL_MINUTES=10
MAX_ARTICLES_PER_RUN=3

# Настройки логирования
LOG_LEVEL=INFO
